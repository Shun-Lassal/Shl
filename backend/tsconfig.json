{
  "compilerOptions": {
    "target": "ES2023",
    "module": "nodenext",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "types": [
      "node",
      "express",
      "cookie-parser",
      "cors",
      "swagger-ui-express",
      "./src/types/swagger-jsdoc"
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "prisma", "prisma.config.ts"],
  "ts-node": {
    "esm": true,
    "experimentalEsm": true,
    "compilerOptions": {
      "module": "nodenext"
    }
  }
}
